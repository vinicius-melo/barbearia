<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:radius="15dp" />
        </shape>
    </item>

    <item
        android:left="0dp"
        android:right="3dp"
        android:top="0dp"
        android:bottom="3dp">
        <shape android:shape="rectangle">
            <gradient android:startColor="#983E22"
                android:endColor="#e09145"
                android:angle="360"/>
            <corners android:radius="15dp" />
        </shape>
    </item>
</layer-list>